#!/bin/sh

## Category: Various
## Shortdesc: Clone all repositories of a particular user from github.com

while [ "$1" ]; do
      github_username="$1"; shift

      curl "https://api.github.com/users/$github_username/repos" | jq -r '.[] | .ssh_url' | while read url; do
          trackrepo.rb "$url"
      done

done
